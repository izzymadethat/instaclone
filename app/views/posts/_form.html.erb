<div style="border-radius: 6px; padding: 15px; box-shadow: 0px 0px 2px 2px (255, 255, 255, 0.1)">
  <%= form_with(model: post) do |form| %>
    <div>
      <% invalid = post.errors.include?(:title)%>
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title, class:"form-control" %>
      <% if invalid %>
        <p class="form-text" style="color: red; font-style: italic">
        <%= post.errors.full_messages_for(:title).join(" and ") %>
      <% end %>

    </div>

    <div>
      <% invalid = post.errors.include?(:description)%>
      <%= form.label :description, style: "display: block" %>
      <%= form.text_field :description, class:"form-control" %>
      <% if invalid %>
        <p class="form-text" style="color: red; font-style: italic">
        <%= post.errors.full_messages_for(:description).join(" and ") %>
      <% end %>
    </div>

    <div>
      <% invalid = post.errors.include?(:keywords)%>
      <%= form.label :keywords, style: "display: block" %>
      <%= form.text_field :keywords, class:"form-control" %>
      <% if invalid %>
        <p class="form-text" style="color: red; font-style: italic">
        <%= post.errors.full_messages_for(:keywords).join(" and ") %>
      <% end %>
    </div>
    <%= form.file_field :images, multiple:true, style:"margin-top:15px;" %>
    <br>
    <div>
      <%= form.text_field :user_id, type: "hidden", value: current_user.id %>
    </div>
    <div>
      <%= form.submit class:"btn btn-primary col-12", style:"margin-top:15px;" %>
    </div>
  <% end %>
</div>
