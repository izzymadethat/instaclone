<%= turbo_stream.replace :posts do %>
  <% @posts.each do |post| %>
        <%= render post %>
  <% end %>
<% end %>

  <%# if !user_signed_in? %>
    <%# @posts.each do |post| %>
      <%#= render post %>
    <%# end %>
  <%# end %>
<%# end %>

<% if @pagy.next.present? %>
  <%= turbo_stream.replace :pagination do %>
    <%= turbo_frame_tag :pagination, loading: :lazy,
                        src: posts_path(page: @pagy.next) %>
  <% end %>
<% end %>
